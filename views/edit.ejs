    <link rel="stylesheet" href="/style.css" />
    <!-- import the webpage's client-side javascript file -->
    <script src="/client.js" defer></script>
  </head>
  
  <body>
    <header>
      <nav class="navbar navbar-light bg-light">
        <div class="container-fluid d-flex align-items-center justify-content-center">
          <a class="navbar-brand" href="/">Sakura-Orders</a>
          <a class="m-2" href="/">ホーム</a>
          <a class="m-2" href="/edit">編集</a>
        </div>
      </nav>
    </header>
    
    <!--データ入力・編集 -->
    <div class="container pt-5">
      <table class="table table-bordered">
        <tbody id="nameFormArea">
          <tr>
            <th class="bg-light">名前</th>
          </tr>
          <tr>
            <td><input class="form-control" type="text" name="name"></td>
          </tr>
          <tr>
            <td><input class="form-control" type="text" name="name"></td>
          </tr>
        </tbody>
      </table>
      <input id="nameRowAdd" onclick="nameRowAdd()" type="submit" value="追加" class="btn btn-primary">
      <input id="nameDataAdd" onclick="nameDataAdd()" type="submit" value="送信" class="btn btn-primary">
    </div>
    
    
    
    <div class="container">
      <table class="table table-bordered">
        <tbody id="menuFormArea">
          <tr>
            <th class="bg-light">店名</th>
            <th class="bg-light">メニュー</th>
            <th class="bg-light">税込価格</th>
          </tr>
          <tr>
            <td><input class="form-control" type="text" name="store-name"></td>
            <td><input class="form-control" type="text" name="menu"></td>
            <td><input class="form-control" type="text" name="price"></td>
          </tr>
          <tr>
            <td><input class="form-control" type="text" name="store-name"></td>
            <td><input class="form-control" type="text" name="menu"></td>
            <td><input class="form-control" type="text" name="price"></td>
          </tr>
        </tbody>
      </table>
      <input id="menuRowAdd" onclick="menuRowAdd()" type="submit" value="追加" class="btn btn-primary">
      <input type="submit" value="送信" class="btn btn-primary">
    </div>
      
    
    <div class="container">
      <a href="/">
        <button class="btn btn-primary">ホーム</button>
      </a>
    </div>
    <br>


    <footer class="footer mt-auto py-3 bg-light">
      <div
        class="container d-flex align-items-center justify-content-center text-muted"
      >
        Copyright ©Sakura-Orders
      </div>
    </footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
